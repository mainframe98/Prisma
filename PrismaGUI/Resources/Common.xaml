<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Ensure all buttons have at least 5 pixels of padding within them to space their text from their borders. -->
    <Style TargetType="{x:Type Button}">
        <Setter Property="Padding" Value="5,0,5,0"/>
    </Style>
    <Style x:Key="HeaderBorder" TargetType="{x:Type Border}">
        <Setter Property="BorderThickness" Value="0,0,0,1"/>
        <Setter Property="BorderBrush">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="White" Offset="0.0"/>
                    <GradientStop Color="LightGray" Offset="0.1"/>
                    <GradientStop Color="LightGray" Offset="0.9"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
